<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="10001" id="pro.rudloff.openvegemap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>OpenVegeMap</name>
    <description>
        OpenVegeMap Cordova app
    </description>
    <author email="contact@rudloff.pro" href="https://rudloff.pro/">
        Pierre Rudloff
    </author>
    <content src="index.html" />
    <icon src="www/img/android-chrome-192x192.png" width="192" height="192" />
    <icon src="www/img/android-chrome-512x512.png" width="512" height="512" />
    <icon src="www/img/favicon-16x16.png" width="16" height="16" />
    <icon src="www/img/favicon-32x32.png" width="32" height="32" />
    <icon src="www/img/mstile-144x144.png" width="144" height="144" />
    <icon src="www/img/mstile-150x150.png" width="150" height="150" />
    <icon src="www/img/mstile-310x310.png" width="310" height="310" />
    <access origin="https://maps.wikimedia.org" />
    <access origin="https://overpass-api.de" />
    <access origin="https://nominatim.openstreetmap.org" />
    <access origin="https://liberapay.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <edit-config file="app/src/main/AndroidManifest.xml"  target="/manifest" mode="merge">
        <manifest android:installLocation="auto" />
    </edit-config>
    <universal-links>
        <host name="openvegemap.netlib.re" scheme="https" />
        <host name="openvegemap.netlib.re" scheme="http" />
    </universal-links>
    <preference name="android-minSdkVersion" value="19" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-deeplinks" spec="^1.1.0" />
    <engine name="android" spec="^7.1.4" />
</widget>
